//pod 의 상태를 유지해주는 컨트롤러
- pod 이름
- pod 의 볼륨(스토리지)

kubectl create -f rc-nginx.yaml
kubectl delete pod rc-nginx.sk75v

////////////////////////////////
apiVersion: v1
kind: ReplicationController
metadata:
  name: rs-nginx
spec:
  replicas: 3
  selector:
    matchLabels:
      app: webui
  template:
    metadata:
      names: nginx-pod
      labels:
        app: webui
    spec:
      containers:
      - name: nginx-container
        image: nginx:1.14
